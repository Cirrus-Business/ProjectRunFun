<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/small_town_center">

    <ImageButton
        android:layout_width="76dp"
        android:layout_height="63dp"
        android:id="@+id/leftButton"
        android:src="@drawable/arrow_left"
        android:layout_alignTop="@+id/rightButton"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="63dp"
        android:layout_height="76dp"
        android:id="@+id/upButton"
        android:src="@drawable/arrow_up"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/downButton" />

    <ImageButton
        android:layout_width="63dp"
        android:layout_height="76dp"
        android:id="@+id/downButton"
        android:src="@drawable/arrow_down"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="76dp"
        android:layout_height="63dp"
        android:id="@+id/rightButton"
        android:src="@drawable/arrow_right"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/button1"
        android:layout_alignEnd="@+id/rightButton"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/upButton"
        android:layout_above="@+id/leftButton"
        android:alpha="0.2"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/button2"
        android:alpha="0.2"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/downButton"
        android:layout_below="@+id/leftButton" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/button3"
        android:alpha="0.2"
        android:layout_alignEnd="@+id/rightButton"
        android:layout_toRightOf="@+id/downButton"
        android:layout_below="@+id/rightButton" />

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imageView"
    android:src="@drawable/ic_person"
        android:layout_alignTop="@+id/leftButton"
        android:layout_alignStart="@+id/upButton"
        android:layout_alignBottom="@+id/leftButton"
        android:layout_alignEnd="@+id/upButton" />

</RelativeLayout>
